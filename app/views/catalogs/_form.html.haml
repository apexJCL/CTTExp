= form_for @catalog do |f|
  - if @catalog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@catalog.errors.count, "error")} prohibited this catalog from being saved:"
      %ul
        - @catalog.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col.s12.m6
      .input-field
        =f.label :nombre, 'Nombre'
        =f.text_field :nombre
    .col.s12.m6
      .input-field
        =f.label :fecha, 'Fecha'
        =f.text_field :fecha, class: 'datepicker'
    .col.s12
      .input-field
        =f.label :desc, 'Descripci√≥n'
        =f.text_area :desc, class: 'materialize-textarea'
    .col.s12.m6
      .input-field
        =f.label :tipo_camb, "Tipo Cambio"
        =f.text_field :tipo_camb


  .actions
    .row.right
      .col.s12
        %a.btn.red.waves-effect.waves-light{ href: catalogs_path} Cancelar
        = f.submit 'Guardar', class: 'btn-flat waves-effect waves-green'
